<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutZonaSegura"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".actividadesDueño.ZonasSeguras">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/textoZonaSegura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Zona segura no definida"
        android:textSize="16sp"
        android:padding="16dp"
        android:gravity="center"
        android:textColor="#000000"
        android:background="#E0E0E0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnObtenerUbicacion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="📍 Obtener ubicación" />

        <Button
            android:id="@+id/btnAgregarZonaSegura"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🔐 Agregar zona segura"
            android:layout_marginStart="8dp"/>
    </LinearLayout>
</LinearLayout>

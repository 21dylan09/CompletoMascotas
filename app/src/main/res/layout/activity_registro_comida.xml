<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/fondo"
    android:padding="16dp">

    <!-- Título centrado -->
    <TextView
        android:id="@+id/tvTituloRegistroComida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registro de la Comida de Tu Mascota:"
        android:textColor="@color/verdeMenta"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="16dp" />

    <!-- TextView para mostrar recomendaciones -->
    <TextView
        android:id="@+id/tvRecomendacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recomendación: El peso de su mascota es _______ y su edad es _______ le recomendamos que le de __ kg de comida."
        android:textSize="16sp"
        android:textColor="@color/verdeMenta"
        android:paddingTop="10dp"
        android:layout_marginBottom="10dp"/>

    <!-- EditText para ingresar la cantidad de comida -->
    <EditText
        android:id="@+id/etCantidadComida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cantidad de comida comprada (kg)"
        android:textColor="@color/verdeMenta"
        android:textColorHint="@color/verdeMenta"
        android:inputType="numberDecimal"
        android:layout_marginBottom="10dp"/>

    <!-- EditText para ingresar la marca de comida -->
    <EditText
        android:id="@+id/etMarcaComida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Marca de comida"
        android:textColor="@color/verdeMenta"
        android:textColorHint="@color/verdeMenta"
        android:layout_marginBottom="10dp"/>

    <!-- Botón para agregar comida -->
    <Button
        android:id="@+id/btnAgregarComida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agregar Comida"
        android:textColor="#1C3D30"
        android:backgroundTint="@color/secundario"
        android:layout_marginBottom="15dp"/>

    <!-- TextView para mostrar los kilos de comida restantes -->
    <TextView
        android:id="@+id/tvKilosRestantes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kilos de comida restantes: 0 kg"
        android:textSize="16sp"
        android:textColor="@color/verdeMenta"
        android:paddingTop="10dp"
        android:layout_marginBottom="10dp"/>

    <!-- ListView para mostrar el historial de comida comprada -->
    <ListView
        android:id="@+id/lvHistorialComida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- EditText para ingresar los kilos que comió la mascota -->
    <EditText
        android:id="@+id/etCantidadComidaComidaMascota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cantidad comida comida a la mascota (kg)"
        android:textColor="@color/verdeMenta"
        android:textColorHint="@color/verdeMenta"
        android:inputType="numberDecimal"
        android:layout_marginBottom="10dp"/>

    <!-- Botón para registrar el gasto de comida -->
    <Button
        android:id="@+id/btnRegistrarGasto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar Gasto"
        android:textColor="#1C3D30"
        android:backgroundTint="#F26C4F"/>

    <!-- ListView para mostrar el historial de los gastos -->
    <ListView
        android:id="@+id/lvHistorialGastos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"/>

</LinearLayout>
